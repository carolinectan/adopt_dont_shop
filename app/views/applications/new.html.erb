<h1>New Application</h1>
<%= form_with url: "/applications", method: :post, local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :street %>
  <%= f.text_field :street %>

  <%= f.label :city %>
  <%= f.text_field :city %>

  <%= f.label :state %>
  <%= f.text_field :state %>

  <%= f.label :zip_code, "Zip Code" %>
  <%= f.number_field :zip_code %>

  <%= f.hidden_field :application_status, :value => 'In Progress' %>

  <%= f.submit "Submit" %>
<% end %>
